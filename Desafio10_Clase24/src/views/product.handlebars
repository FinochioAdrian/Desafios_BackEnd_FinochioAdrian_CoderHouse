{{>nav}}
<div class="container-fluid">
  <div class="row justify-content-center align-items-center g-2">

    <div class="col">
      <div class="card" style="width: 18rem;">
        {{#if product.thumbnails.length}}
        <img src="/images/products/{{product.thumbnails.[0]}}" class="bd-placeholder-img card-img-top img-fluid"
          style="aspect-ratio:4/3;" alt="...">
        {{else}}
        <svg class="bd-placeholder-img card-img-top" role="img" aria-label="Marcador de posición: Cap de imagen"
          focusable="false" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg">
          <title>Marcador de posición</title>
          <rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">

            Sin imagen previa

          </text>
        </svg>
        {{/if}}

        <div class="card-body">
          <h5 class="card-title">{{product.title}} </h5>
          <p class="card-text">{{product.description}}</p>
          <p class="card-text"><span>Price: ${{product.price}}</span>
            <span>Stock: {{product.stock}}</span>
          </p>
          <p class="card-text">Code: {{product.code}}</p>
          <div>
            <form class="d-flex" role="search" action="/carts/{{user.cart}}/product/{{product._id}}"
              method="post">
              <input class="form-control me-2" type="number" placeholder="Add Cart" aria-label="Quantity" required
                name="quantity" min="1" max="{{product.stock}}" />
              <button class="btn btn-outline-success" type="submit">Add Cart</button>
            </form>
          </div>

        </div>
      </div>
    </div>

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>