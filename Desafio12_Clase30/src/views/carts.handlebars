
{{>nav}}
<H4 class="d-flex justify-content-center">Cart {{result._id}}</H4>
<div class="container-fluid">
  <div class="row justify-content-center align-items-center g-2">
    {{#each result.products}}
        
        <a href="/product/{{this.product._id}}" class="col text-decoration-none">
          <div class="card" style="width: 18rem;">
            
                {{#if product.thumbnails.length}}
        <img src="/images/products/{{product.thumbnails.[0]}}" class="bd-placeholder-img card-img-top img-fluid"
          style="aspect-ratio:4/3;" alt="...">
        {{else}}
        <svg class="bd-placeholder-img card-img-top" role="img" aria-label="Marcador de posición: Cap de imagen"
          focusable="false" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg">
          <title>Marcador de posición</title>
          <rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">

            Sin imagen previa

          </text>
        </svg>
        {{/if}}
            
            <div class="card-body">
            <h5 class="card-title">{{this.product.title}} </h5>
            <p class="card-text">{{this.product.description}}</p>
            <p class="card-text"><span>Price: ${{this.product.price}}</span>
            <p class="card-text">Code: {{this.product.code}}</p>
            <p class="card-text">Quantity: {{this.quantity}}</p>
            
            </div>
          </div>
        </a>

        
{{/each}}

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
